<?xml version="1.0" encoding="utf-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-table-user_role" author="sabetski">
        <createTable tableName="main.user_role">
            <column  name="user_id"  type="INTEGER"/>
            <column  name="role_id"  type="INTEGER"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="main.user_role" baseColumnNames="user_id"
                                 constraintName="user-id -> user_role-user_id"
                                 referencedTableName="main.user" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="main.user_role" baseColumnNames="role_id"
                                 constraintName="role-id -> user_role-role_id"
                                 referencedTableName="main.role" referencedColumnNames="id"/>
        <addPrimaryKey tableName="main.user_role" columnNames="user_id, role_id"/>
    </changeSet>

</databaseChangeLog>