<?xml version="1.0" encoding="utf-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-table-document" author="sabetski">
        <createTable tableName="main.document">
            <column  name="id"  type="INTEGER">
                <constraints  nullable="false"  primaryKey="true"  unique="true"/>
            </column>
            <column name="number" type="VARCHAR(40)">
                <constraints unique="true"/>
            </column>
            <column name="user_id" type="INTEGER">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="main.document" baseColumnNames="user_id"
                                 constraintName="user-id -> document-user_id"
                                 referencedTableName="main.user" referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>